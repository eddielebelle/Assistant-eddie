# MQTT Configuration
# Configure your MQTT broker for home automation and messaging
MQTT_HOST=192.168.1.57
MQTT_PORT=1883
MQTT_USERNAME=your_username
MQTT_PASSWORD=your_password

# Spotify Configuration
# Get your Spotify API credentials from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:8000

# OpenWeatherMap Configuration
# Get your API key from https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweathermap_api_key

# Model Paths
# Paths to your local AI models
WHISPER_MODEL_PATH=/path/to/whisper/model/small.en.pt
T5_MODEL_PATH=/path/to/t5/model
T5_TOKENIZER_PATH=/path/to/t5/tokenizer
SPACY_MODEL_PATH=/path/to/spacy/custom/model

# Resource Paths
SPOTIFY_DATA_PATH=./resources/spotify_data.json
ALARM_SOUND_PATH=./resources/alarm1.wav
